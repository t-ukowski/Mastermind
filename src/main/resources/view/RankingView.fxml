<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.RankingController"
            prefHeight="600.0" prefWidth="600.0"
            stylesheets="/css/styles.css">

    <center>
        <VBox alignment="TOP_CENTER" prefHeight="575.0" prefWidth="600.0" BorderPane.alignment="CENTER" styleClass="standard_box">
            <TableView fx:id="rankingTable" prefHeight="540.0" prefWidth="550.0" BorderPane.alignment="CENTER" >
                <columns>
                    <TableColumn fx:id="positionColumn" text="Miejsce" />
                    <TableColumn fx:id="nickColumn" text="Gracz" />
                    <TableColumn fx:id="gamesPlayedColumn" text="Rozegrane gry" />
<!--                    <TableColumn fx:id="gamesWonColumn" text="Wygrane gry" />-->
                    <TableColumn fx:id="bestScoreColumn" text="Najlepszy wynik" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
    <bottom>
        <VBox alignment="TOP_CENTER" prefHeight="25.0" prefWidth="600.0" BorderPane.alignment="CENTER" styleClass="bottom_line">

        </VBox>
    </bottom>

</BorderPane>
